{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /* Strict Type-Checking Options */
    "alwaysStrict": true,
    /* Additional Checks */
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /* Experimental Options */
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "src/*.ts",
    "src/app/**/*",
    "src/environments/**/*",
    "src/testing/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}